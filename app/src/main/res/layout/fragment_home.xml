<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alexkaer.ui.fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_320dp"
        android:background="@drawable/temp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_28sp"
            android:textColor="#FFFFFFFF"
            android:text="绝赞跨年餐厅大搜罗"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sp"
            android:textColor="#FFFFFFFF"
            android:text="一键告别选择困难症"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120dp"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout android:id="@+id/type_share"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/home_tool_button_share"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7dp"
                android:textSize="@dimen/_18sp"
                android:textColor="#FF383838"
                android:text="评价分享"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/type_play"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/home_tool_button_play"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7dp"
                android:textSize="@dimen/_18sp"
                android:textColor="#FF383838"
                android:text="好玩"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/type_money"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/home_tool_button_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7dp"
                android:textSize="@dimen/_18sp"
                android:textColor="#FF383838"
                android:text="赚钱"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/type_drive"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/home_tool_button_drive"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7dp"
                android:textSize="@dimen/_18sp"
                android:textColor="#FF383838"
                android:text="代驾"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/type_suggest"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/home_tool_button_advice"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7dp"
                android:textSize="@dimen/_18sp"
                android:textColor="#FF383838"
                android:text="投诉建议"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_10dp"
        android:background="#FFFFFFFF"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF383838"
            android:textSize="@dimen/_26dp"
            android:layout_marginLeft="@dimen/_34dp"
            android:layout_marginTop="@dimen/_10dp"
            android:text="人气推荐"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginTop="@dimen/_14dp"
            android:background="#FFDBDBDB"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_35dp"
            android:layout_marginTop="@dimen/_15dp"
            android:orientation="horizontal">
            <ImageView android:id="@+id/tuijian_pic"
                android:layout_width="@dimen/_300dp"
                android:layout_height="@dimen/_200dp"
                android:src="@drawable/temp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="牛仔骨炒年糕"
                    android:textColor="#FF383838"
                    android:textSize="@dimen/_26sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已售  236"
                        android:textColor="#FF6A6A6A"
                        android:textSize="@dimen/_16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赞  138"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:textColor="#FF6A6A6A"
                        android:textSize="@dimen/_16sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
